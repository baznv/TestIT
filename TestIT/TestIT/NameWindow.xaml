<Window x:Class="TestIT.NameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestIT"
        mc:Ignorable="d"
        Title="NameWindow" Height="200" Width="400" WindowStyle="None">
    <StackPanel>
        <TextBox Margin="15,30" Height="30"/>
        <UniformGrid>
            <Button Margin="10" Content="Cancel" IsCancel="True"/>
            <Button Margin="10" Content="Save" IsDefault="True" Click="Button_Click" />
        </UniformGrid>
    </StackPanel>
</Window>
